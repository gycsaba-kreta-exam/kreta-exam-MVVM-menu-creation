<UserControl x:Class="KretaDesktop.View.Header.ConfigurationHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KretaDesktop.View.Header"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{DynamicResource HeaderBackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="90"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>


        <ContentControl Grid.Row="0" 
                        Content="K R É T E   -   Konfiguráció"
                        Style="{DynamicResource HeaderAppTitle}">
        </ContentControl>
        <StackPanel Grid.Row="1">
            <Button HorizontalAlignment="Left" 
                    Margin="32 0 0 0" 
                    Content="Nyelv választás"
                    Command="{Binding UpdateViewCommand}"
                    CommandParameter="SelectLanguage"
                    >
            </Button>
        </StackPanel>
        <ContentControl Grid.Row="2" Content="{Binding SelectedView}"></ContentControl>
    </Grid>
</UserControl>
